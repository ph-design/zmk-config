#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    behaviors {
        // Macro to clear current BT profile (tap)
        bt_clear_current_macro: bt_clear_current_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_CLR>;
        };

        // Macro to clear all BT profiles (hold)
        bt_clear_all_macro: bt_clear_all_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_CLR_ALL>;
        };

        // Hold to clear all BT profiles, Tap to clear current
        bt_clear_holdtap: bt_clear_holdtap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <2000>;
            bindings = <&bt_clear_all_macro>, <&bt_clear_current_macro>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Base";
            bindings = <
&kp ESC   &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N6 &kp N7 &kp N8    &kp N9  &kp N0    &kp MINUS &kp EQUAL     &kp BSPC  &trans
&kp TAB   &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y  &kp U  &kp I     &kp O   &kp P     &kp LBKT  &kp RBKT      &kp BSLH
&kp CAPS  &kp A  &kp S  &kp D  &kp F  &kp G  &kp H  &kp J  &kp K     &kp L   &kp SEMI  &kp SQT                 &kp RET
&kp LSHFT &trans &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M     &kp COMMA &kp DOT &kp SLASH               &kp RSHFT &trans
&kp LCTRL &kp LGUI &kp LALT        &kp SPACE        &kp SPACE        &kp SPACE      &kp RALT  &mo 1     &kp RGUI      &kp RCTRL
            >;
        };

        function_layer {
            display-name = "Function";
            bindings = <
&kp GRAVE &kp F1    &kp F2    &kp F3          &kp F4    &kp F5    &kp F6    &kp F7    &kp F8    &kp F9    &kp F10   &kp F11   &kp F12       &kp DEL   &trans
&trans    &trans    &trans    &trans          &sys_reset  &trans  &trans    &trans    &trans    &trans    &kp PSCRN &kp HOME  &kp END       &studio_unlock
&trans    &trans    &trans    &trans          &trans      &trans  &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT &kp PG_UP &kp PG_DN               &trans
&trans    &trans    &trans    &trans          &trans      &trans  &mo 2     &trans    &trans    &trans    &trans    &trans                  &trans    &trans
&trans    &trans    &trans              &trans               &trans               &trans         &trans    &trans    &trans        &trans
            >;
        };

        bluetooth_layer {
            display-name = "Bluetooth";
            bindings = <
&trans       &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &bt_clear_holdtap 0 0  &trans
&out OUT_TOG &trans        &trans        &trans        &bootloader   &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans       &trans        &trans        &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans          &trans
&trans       &trans        &trans        &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans          &trans           &trans
&trans       &trans        &trans                  &trans               &trans               &trans         &trans    &trans    &trans        &trans
            >;
        };

        extra1 {
            display-name = "Extra 1";
            status = "reserved";
        };

        extra2 {
            display-name = "Extra 2";
            status = "reserved";
        };
    };
};
